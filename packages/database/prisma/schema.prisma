// RootWork LMS Database Schema
// PostgreSQL with Prisma ORM

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// USER MANAGEMENT
// ============================================

enum UserRole {
  STUDENT
  TEACHER
  ADMIN
  PARENT
}

model User {
  id         String   @id @default(uuid())
  email      String   @unique
  firstName  String
  lastName   String
  password   String?  // Nullable for OAuth users
  role       UserRole @default(STUDENT)
  gradeLevel String?  // For students: "K", "1"-"12", or null for non-students
  avatar     String?
  bio        String?
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  instructedCourses Course[]           @relation("CourseInstructor")
  enrollments       CourseEnrollment[]
  lessonProgress    LessonProgress[]
  submissions       AssignmentSubmission[]
  ieps              IEP[]
  gardens           Garden[]
  gardenRewards     GardenReward[]
  
  // Parent-Student relationship
  children          ParentStudent[]    @relation("Parent")
  parents           ParentStudent[]    @relation("Student")

  @@map("users")
}

model ParentStudent {
  id        String   @id @default(uuid())
  parentId  String
  studentId String
  createdAt DateTime @default(now())

  parent  User @relation("Parent", fields: [parentId], references: [id], onDelete: Cascade)
  student User @relation("Student", fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([parentId, studentId])
  @@map("parent_students")
}

// ============================================
// CURRICULUM & COURSES
// ============================================

enum CurriculumStatus {
  DRAFT
  ACTIVE
  ARCHIVED
}

model Curriculum {
  id          String           @id @default(uuid())
  title       String
  description String?
  gradeLevel  String
  subject     String
  status      CurriculumStatus @default(DRAFT)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  // Relations
  courses Course[]

  @@map("curricula")
}

enum CourseStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model Course {
  id           String       @id @default(uuid())
  title        String
  description  String?
  instructorId String
  curriculumId String?
  duration     Int?         // Duration in hours
  status       CourseStatus @default(DRAFT)
  thumbnail    String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  // Relations
  instructor  User               @relation("CourseInstructor", fields: [instructorId], references: [id])
  curriculum  Curriculum?        @relation(fields: [curriculumId], references: [id])
  lessons     Lesson[]
  assignments Assignment[]
  enrollments CourseEnrollment[]

  @@map("courses")
}

model CourseEnrollment {
  id          String    @id @default(uuid())
  courseId    String
  studentId   String
  progress    Float     @default(0) // 0-100
  enrolledAt  DateTime  @default(now())
  completedAt DateTime?

  // Relations
  course  Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  student User   @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([courseId, studentId])
  @@map("course_enrollments")
}

// ============================================
// LESSONS & LEARNING CONTENT
// ============================================

enum LessonStatus {
  DRAFT
  PUBLISHED
}

enum LessonType {
  VIDEO
  TEXT
  QUIZ
  ASSIGNMENT
  INTERACTIVE
}

model Lesson {
  id         String       @id @default(uuid())
  courseId   String
  title      String
  content    String?      @db.Text
  orderIndex Int
  duration   Int?         // Duration in minutes
  type       LessonType   @default(TEXT)
  status     LessonStatus @default(DRAFT)
  videoUrl   String?
  resources  Json?        // Array of resource URLs/metadata
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  // Relations
  course   Course           @relation(fields: [courseId], references: [id], onDelete: Cascade)
  progress LessonProgress[]

  @@map("lessons")
}

model LessonProgress {
  id          String    @id @default(uuid())
  lessonId    String
  studentId   String
  completed   Boolean   @default(false)
  score       Float?    // For quiz lessons
  timeSpent   Int?      // Time spent in seconds
  startedAt   DateTime  @default(now())
  completedAt DateTime?

  // Relations
  lesson  Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  student User   @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([lessonId, studentId])
  @@map("lesson_progress")
}

// ============================================
// ASSIGNMENTS & SUBMISSIONS
// ============================================

enum AssignmentStatus {
  DRAFT
  PUBLISHED
  CLOSED
}

model Assignment {
  id          String           @id @default(uuid())
  courseId    String
  title       String
  description String?          @db.Text
  dueDate     DateTime?
  maxPoints   Int              @default(100)
  status      AssignmentStatus @default(DRAFT)
  rubric      Json?            // Grading rubric
  attachments Json?            // Assignment files
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  // Relations
  course      Course                 @relation(fields: [courseId], references: [id], onDelete: Cascade)
  submissions AssignmentSubmission[]

  @@map("assignments")
}

enum SubmissionStatus {
  PENDING
  SUBMITTED
  GRADED
  RETURNED
}

model AssignmentSubmission {
  id           String           @id @default(uuid())
  assignmentId String
  studentId    String
  content      String?          @db.Text
  attachments  Json?            // Submitted files
  score        Float?
  feedback     String?          @db.Text
  status       SubmissionStatus @default(PENDING)
  submittedAt  DateTime?
  gradedAt     DateTime?
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  // Relations
  assignment Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  student    User       @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([assignmentId, studentId])
  @@map("assignment_submissions")
}

// ============================================
// IEP (INDIVIDUALIZED EDUCATION PROGRAM)
// ============================================

enum IEPStatus {
  DRAFT
  ACTIVE
  COMPLETED
  ARCHIVED
}

model IEP {
  id             String    @id @default(uuid())
  studentId      String
  title          String
  description    String?   @db.Text
  goals          Json      // Array of goal objects with id, description, area, targetDate
  accommodations Json      // Array of accommodation objects
  services       Json?     // Array of service objects (speech, OT, PT, etc.)
  presentLevels  Json?     // Present levels of academic/functional performance
  startDate      DateTime
  endDate        DateTime
  nextReviewDate DateTime?
  status         IEPStatus @default(DRAFT)
  caseManagerId  String?   // Teacher/staff responsible for IEP
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Relations
  student       User              @relation(fields: [studentId], references: [id], onDelete: Cascade)
  goalProgress  IEPGoalProgress[]
  meetings      IEPMeeting[]
  serviceLog    IEPServiceLog[]

  @@map("ieps")
}

model IEPGoalProgress {
  id          String   @id @default(uuid())
  iepId       String
  goalId      String   // References a goal in the IEP's goals JSON
  progress    Float    @default(0) // 0-100
  notes       String?  @db.Text
  evidence    Json?    // Links to work samples, assessments
  recordedBy  String?  // User ID who recorded progress
  recordedAt  DateTime @default(now())

  // Relations
  iep IEP @relation(fields: [iepId], references: [id], onDelete: Cascade)

  @@map("iep_goal_progress")
}

model IEPMeeting {
  id           String   @id @default(uuid())
  iepId        String
  meetingType  String   // 'annual', 'amendment', 'transition', 'eligibility'
  scheduledAt  DateTime
  notes        String?  @db.Text
  attendees    Json?    // Array of attendee names/roles
  decisions    Json?    // Key decisions made
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  iep IEP @relation(fields: [iepId], references: [id], onDelete: Cascade)

  @@map("iep_meetings")
}

model IEPServiceLog {
  id          String   @id @default(uuid())
  iepId       String
  serviceType String   // 'speech', 'occupational_therapy', 'physical_therapy', 'counseling', etc.
  providerId  String?  // Service provider user ID
  duration    Int      // Minutes
  notes       String?  @db.Text
  sessionDate DateTime
  createdAt   DateTime @default(now())

  // Relations
  iep IEP @relation(fields: [iepId], references: [id], onDelete: Cascade)

  @@map("iep_service_logs")
}

// ============================================
// GAMIFICATION (Learning Garden)
// ============================================

enum GardenItemType {
  FLOWER
  TREE
  PLANT
  DECORATION
}

model Garden {
  id        String   @id @default(uuid())
  studentId String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  student User         @relation(fields: [studentId], references: [id], onDelete: Cascade)
  plants  GardenPlant[]

  @@map("gardens")
}

model GardenPlant {
  id          String         @id @default(uuid())
  gardenId    String
  name        String
  type        GardenItemType @default(PLANT)
  level       Int            @default(1)
  xp          Int            @default(0)
  health      Int            @default(100) // 0-100
  lastWatered DateTime?
  positionX   Int            @default(0)
  positionY   Int            @default(0)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  // Relations
  garden Garden @relation(fields: [gardenId], references: [id], onDelete: Cascade)

  @@map("garden_plants")
}

enum RewardType {
  SEED
  FERTILIZER
  DECORATION
  XP
  BADGE
}

model GardenReward {
  id         String     @id @default(uuid())
  studentId  String
  rewardType RewardType
  amount     Int        @default(1)
  reason     String
  earnedAt   DateTime   @default(now())

  // Relations
  student User @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@map("garden_rewards")
}

// ============================================
// COMMUNICATIONS
// ============================================

model Notification {
  id        String   @id @default(uuid())
  userId    String
  title     String
  message   String   @db.Text
  type      String   // e.g., 'assignment', 'grade', 'announcement'
  read      Boolean  @default(false)
  link      String?  // Optional link to related content
  createdAt DateTime @default(now())

  @@map("notifications")
}

model Announcement {
  id          String   @id @default(uuid())
  authorId    String
  courseId    String?  // Null for school-wide announcements
  title       String
  content     String   @db.Text
  pinned      Boolean  @default(false)
  publishedAt DateTime @default(now())
  expiresAt   DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("announcements")
}

// ============================================
// CANVAS CONTENT (AI Studio)
// ============================================

model CanvasProject {
  id          String   @id @default(uuid())
  authorId    String
  title       String
  description String?
  content     Json     // Canvas state (nodes, positions, etc.)
  thumbnail   String?
  isTemplate  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("canvas_projects")
}

// ============================================
// AUDIT & ANALYTICS
// ============================================

model AuditLog {
  id         String   @id @default(uuid())
  userId     String?
  action     String   // e.g., 'CREATE', 'UPDATE', 'DELETE'
  entityType String   // e.g., 'Course', 'Lesson', 'User'
  entityId   String
  metadata   Json?    // Additional context
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())

  @@index([userId])
  @@index([entityType, entityId])
  @@index([createdAt])
  @@map("audit_logs")
}
